#:kivy 2.3.0
#:import Factory kivy.factory.Factory

<widgettree>:
    id:main
    orientation:'vertical'
    BoxLayout:
        orientation:'horizontal'
        size_hint_y:None
        Button:
            text: 'About'
            size_hint: None,None
            size:(100,100)
            pos:self.pos
            background_color: (0, 1, 1, 1)
            on_release: Factory.About().open()
        Label:
            id:head
            text:'Click anywhere on the Image'
            font_size:20
        
        
    BoxLayout:
        id:main_pic
        orientation:'horizontal'

        Picture:
            id:picture_comes_here
            size_hint_x:1
            size_hint_y:1

        BoxLayout:
            orientation:'vertical'
            Label:
                id:2
                text:picture_comes_here.colour
                font_size:40

               
